{
  "name": "peril-settings",
  "version": "0.0.1",
  "repository": "https://github.com/kevnm67/peril-settings",
  "author": "Kevin Morton <kevnm67@gmail.com>",
  "license": "MIT",
  "scripts": {
    "precommit": "lint-staged",
    "type-check": "tsc  --noEmit"
  },
  "homepage": "https://github.com/kevnm67/peril-settings",
  "dependencies": {
    "@types/graphql": "^14.0.3",
    "@types/semver": "^5.4.0",
    "@types/semver-sort": "0.0.0",
    "googleapis": "^44.0.0",
    "graphql-schema-utils": "^0.6.5",
    "graphql-tools": "^4.0.6",
    "lodash": "^4.17.11",
    "node-fetch": "^2.2.0",
    "semver": "^5.4.1",
    "semver-sort": "^0.0.4"
  },
  "devDependencies": {
    "@slack/client": "^4.8.0",
    "@types/jest": "^23.3.9",
    "@types/lodash": "^4.14.144",
    "@types/node": "^10.12.9",
    "@types/node-fetch": "^2.1.3",
    "danger": "^7.0.9",
    "danger-plugin-spellcheck": "^1.5.0",
    "danger-plugin-yarn": "^1.3.0",
    "github-webhook-event-types": "^1.2.1",
    "jest": "^24.3.0",
    "lint-staged": "^7.2.2",
    "prettier": "^1.15.2",
    "ts-jest": "^24.1.0",
    "ts-node": "^7.0.1",
    "typescript": "^3.6.4"
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "singleQuote": false,
    "trailingComma": "es5",
    "bracketSpacing": true
  },
  "jest": {
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(.test)\\.(ts|tsx)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "yarn prettier --write",
      "git add"
    ],
    "*.test.@(ts|tsx)": [
      "jest"
    ],
    "*.json": [
      "yarn prettier --write",
      "git add"
    ],
    "*.md": [
      "yarn prettier --write",
      "git add"
    ]
  }
}
